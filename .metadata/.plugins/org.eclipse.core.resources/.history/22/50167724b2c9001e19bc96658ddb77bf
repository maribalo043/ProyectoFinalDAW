import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.mail.SimpleMailMessage;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.stereotype.Service;

@Service
public class CorreoServicio {

    @Autowired
    private JavaMailSender javaMailSender;

    public void enviarCorreo(String direccionDestino, String nombreEquipo) {
        SimpleMailMessage mensaje = new SimpleMailMessage();
        mensaje.setTo(direccionDestino);
        mensaje.setSubject("Bienvenido al equipo " + nombreEquipo);
        mensaje.setText("Hola,\n\nBienvenido al equipo " + nombreEquipo + ".\n\nSaludos.");

        javaMailSender.send(mensaje);
        System.out.println("Correo enviado exitosamente.");
    }
}
